<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_64"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGridDetailCustomerReviewItemPhoto"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGridDetailCustomerReviewItemReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivGridDetailCustomerReviewItemPhoto"
        app:layout_constraintTop_toTopOf="@+id/ivGridDetailCustomerReviewItemPhoto"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGridDetailCustomerReviewItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/sp_12"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivGridDetailCustomerReviewItemPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvGridDetailCustomerReviewItemReview" />

</androidx.constraintlayout.widget.ConstraintLayout>